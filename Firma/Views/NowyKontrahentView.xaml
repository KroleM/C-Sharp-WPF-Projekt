<local:JedenViewBase x:Class="Firma.Views.NowyKontrahentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Firma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800" Background="White">
    <UserControl.Resources>
        <ResourceDictionary Source="StyleZakladekResources.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Label  Grid.Column="0"  Grid.Row="0"  Content="Kod"  Margin="0,8,0,8"/>
        <TextBox  Grid.Column="1"  Grid.Row="0"	Margin="0,8,0,8"  Width="80" HorizontalAlignment="Left"  Text="{Binding  Path=Kod, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

        <Label  Grid.Column="0"  Grid.Row="1"  Content="Nazwa" Margin="0,8,0,8"/>
        <TextBox  Grid.Column="1"  Grid.Row="1"	Margin="0,8,0,8"  Width="400" HorizontalAlignment="Left"  Text="{Binding  Path=Nazwa, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

        <Label  Grid.Column="0"  Grid.Row="2"  Content="NIP" Margin="0,8,0,8"/>
        <TextBox  Grid.Column="1"  Grid.Row="2" Margin="0,8,0,8"  Width="80" HorizontalAlignment="Left"  Text="{Binding Path=NIP, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}"/>

        <Label  Grid.Column="0"  Grid.Row="3"  Content="Adres"  Margin="0,8,0,8"/>
        <StackPanel Grid.Column="1"  Grid.Row="3" Grid.RowSpan="2" Margin="0,8,0,8"  HorizontalAlignment="Left" Orientation="Horizontal">
            <Label  HorizontalAlignment="Left" Content="{Binding DaneAdresu}" Visibility="{Binding CzyAdresWybrany, Converter={StaticResource boolToVisibility}}"/>
            <Button Width="100" HorizontalAlignment="Left" Content="Wybierz Adres" Command="{Binding WybierzAdresCommand}"/>
        </StackPanel>
        <!--<Label  Grid.Column="1"  Grid.Row="3" Grid.RowSpan="2" Margin="0,8,0,8"  Width="300" HorizontalAlignment="Left" Content="{Binding DaneAdresu}" />
        <Button Grid.Column="2" Grid.Row="3" Margin="0,0,0,0" Width="100" HorizontalAlignment="Left" Content="Wybierz Adres" Command="{Binding WybierzAdresCommand}"/>-->

        <Label  Grid.Column="0"  Grid.Row="5"  Content="Rodzaj kontrahenta"  Margin="0,8,0,8"/>
        <ComboBox  Grid.Column="1"  Grid.Row="5"  Margin="0,8,0,8"  Width="100" HorizontalAlignment="Left" ItemsSource="{Binding RodzajeKontrahenta}" DisplayMemberPath="Nazwa" SelectedValue="{Binding RodzajId, ValidatesOnDataErrors=True}" SelectedValuePath="Id" />

        <Label  Grid.Column="0"  Grid.Row="6"  Content="Stanowisko"  Margin="0,8,0,8"/>
        <ComboBox  Grid.Column="1"  Grid.Row="6"  Margin="0,8,0,8"  Width="200" HorizontalAlignment="Left" ItemsSource="{Binding GrupyRabatowe}" DisplayMemberPath="Value" SelectedValue="{Binding GrupaRabatowaId, ValidatesOnDataErrors=True, NotifyOnValidationError=true}" SelectedValuePath="Key" />

        <Label Grid.Column="0"  Grid.Row="8"  Content="Notatka" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1"  Grid.Row="8" Grid.RowSpan="2" Margin="0,8,0,8" Width="300" HorizontalAlignment="Left" Text="{Binding Path=Notatka, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Column="0"  Grid.Row="10" Content="Użytkownik" Margin="0,8,0,8"/>
        <TextBox Grid.Column="1"  Grid.Row="10" Margin="0,8,0,8" Width="200" HorizontalAlignment="Left" Text="{Binding Path=Uzytkownik, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</local:JedenViewBase>
